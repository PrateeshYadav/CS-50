#include<stdio.h>
#include<cs50.h>

int main (void)
{

    int array[] = {5,2,1,3,6,4};
    int aSize = 6;

    int sorted = 0;

    while (sorted != aSize)
    {
        for(int i = 0; i < aSize; i++)// i wil be the value compared to "sorted" array.
        {

            int temp = 0;

            for(int j = 0; j < sorted; j++)// j will be the "sorted" array that we compare i to.
            {
                if(array[i] < array[j])
                {
                    temp = array[i];

                    for(int k = sorted; k > j; k--)
                    {
                        array[k] = array[k-1];

                    }

                    array[j] = temp;

                }

            }

            sorted++;

            for(int x = 0; x < sorted; x++)
            {
              printf("%i, ",array[x]);

            }

            printf("\n");

        }




    }

    for(int a = 0; a < aSize; a++)
    {
        printf("%i\n",array[a]);
    }











}
